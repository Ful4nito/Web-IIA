---
import Header from "../../../components/Header.astro"
import Layout from "../../../layouts/Layout.astro"
---

<Layout>
    <Header />
    <body>
        <div class="hoja">
            <h1>Calculo Multivariable</h1>
            <div class="seccion">
                <h2>UNIDAD I</h2>
                <b>Vectores y funciones vectoriales</b>
            </div>
            <br>
            <div class="seccion">
                <h2>UNIDAD II</h2>
                <b>Derivadas Parciales</b>
                <h3>Transformaciones Cartesianas</h3>
                <h3>Limites Multivariable</h3>
                <h3>Algebra del Operador Nabla</h3>
                <h4>Gradiente, Divergencia, Rotacional, y Laplaciano</h4>
                <h3>Coordenadas Curvilineas</h3>
                <h4>Sistemas de Coordenadas</h4>
                <img class="completa" src="./SistemasCoordenados.png" alt="Coordenadas">
                <h4>Coordenadas Cilindricas</h4>
                <b>Lineas Coordenadas</b>
                <img class="completa" src="./LineasCoordenadas_Cilindricas.png" alt="LineasCilindricas">
                <b>Superficies Coordenadas</b>
                <img class="completa" src="./SuperficiesCoordenadas_Cilindricas.png" alt="SuperficiesCilindricas">
                <h4>Coordenadas Esfericas</h4>
                <b>Lineas Coordenadas</b>
                <img class="completa" src="./LineasCoordenadas_Esfericas.png" alt="LineasEsfericas">
                <b>Superficies Coordenadas</b>
                <img class="completa" src="./SuperficiesCoordenadas_Esfericas.png" alt="SuperficiesEsfericas">
            </div>
            <br>
            <div class="seccion">
                <h2>UNIDAD III</h2>
                <b>Integrales múltiples</b>
            </div>
            <br>
            <div class="seccion">
                <h2>UNIDAD IV</h2>
                <b>Teoremas de Integración</b>
            </div>
            <br>
        </div>
    </body>
</Layout>